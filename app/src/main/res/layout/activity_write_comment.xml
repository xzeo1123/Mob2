<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WriteComment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="411dp"
        android:layout_height="56dp"
        android:background="#7186FB"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        tools:layout_editor_absoluteX="0"
        tools:layout_editor_absoluteY="0dp" />

    <ImageButton
        android:id="@+id/imageButtonBack"
        android:layout_width="26dp"
        android:layout_height="22dp"
        app:srcCompat="@drawable/left_arrow"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="22dp" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:text="Write a Comment"
        android:textSize="14dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="64dp"
        tools:layout_editor_absoluteY="22dp" />

    <Button
        android:id="@+id/buttonSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        tools:layout_editor_absoluteX="304dp"
        tools:layout_editor_absoluteY="5dp" />

    <ImageView
        android:id="@+id/imageIntrMga"
        android:layout_width="117dp"
        android:layout_height="161dp"
        app:srcCompat="@drawable/book3"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="77dp" />

    <TextView
        android:id="@+id/introMga2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Author"
        android:textSize="12dp"
        tools:layout_editor_absoluteX="151dp"
        tools:layout_editor_absoluteY="96dp" />

    <TextView
        android:id="@+id/introMga1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONAN"
        android:textSize="14dp"
        tools:layout_editor_absoluteX="151dp"
        tools:layout_editor_absoluteY="77dp" />

    <FrameLayout
        android:layout_width="378dp"
        android:layout_height="159dp"
        android:background="#D0DAFE"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="247dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your comment..."
            android:textSize="12dp"
            android:textColor="#63656C" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>