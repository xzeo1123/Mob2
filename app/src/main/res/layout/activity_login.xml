<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:text="LOGIN"
        tools:layout_editor_absoluteX="70dp"
        tools:layout_editor_absoluteY="580dp" />

    <ImageView
        android:id="@+id/imageLogo"
        android:layout_width="170dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/_hkt_truyn_logo"
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="207dp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="194dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="text"
        android:text="Email"
        android:textSize="14dp"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="415dp" />

    <ImageView
        android:id="@+id/imageUser"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:srcCompat="@drawable/profile_user_icon"
        tools:layout_editor_absoluteX="70dp"
        tools:layout_editor_absoluteY="424dp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="194dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textPassword"
        android:textSize="14dp"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="463dp" />

    <ImageView
        android:id="@+id/imageLock"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:srcCompat="@drawable/lock_password"
        tools:layout_editor_absoluteX="70dp"
        tools:layout_editor_absoluteY="474dp" />

    <CheckBox
        android:id="@+id/checkBoxPass"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Remember password"
        android:textSize="12dp"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="510dp" />

    <TextView
        android:id="@+id/textCreatAcc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create a new account"
        android:textSize="10dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="69dp"
        tools:layout_editor_absoluteY="647dp" />

    <TextView
        android:id="@+id/textForgotPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot password?"
        android:textSize="10dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="260dp"
        tools:layout_editor_absoluteY="647dp" />

</androidx.constraintlayout.widget.ConstraintLayout>