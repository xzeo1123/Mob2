<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BCListActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="411dp"
        android:layout_height="56dp"
        android:background="#7186FB"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        tools:layout_editor_absoluteX="0"
        tools:layout_editor_absoluteY="0dp" />

    <ImageButton
        android:id="@+id/imageButtonBack"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:srcCompat="@drawable/next"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="22dp" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:text="Bookcase"
        android:textSize="14dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="64dp"
        tools:layout_editor_absoluteY="22dp" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="56dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/reading"
                android:layout_width="148dp"
                android:layout_height="wrap_content"
                android:background="#36373C"
                android:text="Reading"
                android:textSize="12dp"
                android:textStyle="bold"
                tools:layout_editor_absoluteY="18dp" />

            <Button
                android:id="@+id/liked"
                android:layout_width="132dp"
                android:layout_height="wrap_content"
                android:background="#4D4F5E"
                android:text="Liked"
                android:textSize="12dp"
                android:textStyle="bold"
                tools:layout_editor_absoluteY="18dp" />

            <Button
                android:id="@+id/readList"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:background="#4D4F5E"
                android:text="Reading List"
                android:textSize="12dp"
                android:textStyle="bold"
                tools:layout_editor_absoluteY="18dp" />
        </LinearLayout>
    </HorizontalScrollView>

    <!--Purchased-->
    <LinearLayout
        android:layout_width="392dp"
        android:layout_height="166dp"
        android:orientation="horizontal"
        android:padding="2dp"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="117dp">

        <ImageView
            android:id="@+id/imagePurch"
            android:layout_width="149dp"
            android:layout_height="155dp"
            app:srcCompat="@drawable/book1" />

        <TextView
            android:id="@+id/namePurch"
            android:layout_width="168dp"
            android:layout_height="34dp"
            android:text="Lists of Purchased \n6 stories"
            android:textSize="14dp" />

        <Button
            android:id="@+id/overflow_button"
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="&#8942;"
            android:textSize="24sp" />

    </LinearLayout>

    <!--Lists 1-->
    <LinearLayout
        android:layout_width="392dp"
        android:layout_height="166dp"
        android:orientation="horizontal"
        android:padding="2dp"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="292dp">

        <ImageView
            android:id="@+id/imageList1"
            android:layout_width="149dp"
            android:layout_height="155dp"
            app:srcCompat="@drawable/book1" />

        <TextView
            android:id="@+id/nameList1"
            android:layout_width="168dp"
            android:layout_height="34dp"
            android:text="Lists 1 \n6 stories"
            android:textSize="14dp" />

        <Button
            android:id="@+id/overflow_button"
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="&#8942;"
            android:textSize="24sp" />

    </LinearLayout>

    <!--new list -->
    <LinearLayout
        android:layout_width="392dp"
        android:layout_height="166dp"
        android:orientation="horizontal"
        android:padding="2dp"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="470dp">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="114dp"
            android:layout_height="166dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/add" />

        <TextView
            android:id="@+id/namePurch"
            android:layout_width="168dp"
            android:layout_height="34dp"
            android:text="Add a new list"
            android:textSize="14dp" />

        <Button
            android:id="@+id/overflow_button"
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="&#8942;"
            android:textSize="24dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>