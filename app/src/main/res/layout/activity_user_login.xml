<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.user.UserLoginActivity">

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:text="Login"
        tools:layout_editor_absoluteX="70dp"
        tools:layout_editor_absoluteY="580dp"
        tools:ignore="HardcodedText,MissingConstraints" />


    <EditText
        android:id="@+id/email"
        android:layout_width="194dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="text"
        android:text="Email"
        android:textSize="14dp"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="415dp"
        tools:ignore="Autofill,HardcodedText,LabelFor,MissingConstraints,SpUsage,TextFields"
        android:autofillHints="" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:srcCompat="@drawable/profile_user_icon"
        tools:layout_editor_absoluteX="70dp"
        tools:layout_editor_absoluteY="424dp"
        tools:ignore="ContentDescription,MissingConstraints" />

    <EditText
        android:id="@+id/password"
        android:layout_width="194dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textPassword"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="463dp"
        tools:ignore="Autofill,LabelFor,MissingConstraints" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:srcCompat="@drawable/lock_password"
        tools:layout_editor_absoluteX="70dp"
        tools:layout_editor_absoluteY="474dp"
        tools:ignore="ContentDescription,MissingConstraints" />

    <CheckBox
        android:id="@+id/checkBoxPass"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Remember password"
        android:textSize="12sp"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="510dp"
        tools:ignore="HardcodedText,MissingConstraints" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create a new account"
        android:textSize="10sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="69dp"
        tools:layout_editor_absoluteY="647dp"
        tools:ignore="HardcodedText,MissingConstraints,SmallSp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot password?"
        android:textSize="10sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="260dp"
        tools:layout_editor_absoluteY="647dp"
        tools:ignore="HardcodedText,MissingConstraints,SmallSp" />

</androidx.constraintlayout.widget.ConstraintLayout>